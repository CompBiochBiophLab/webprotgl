#ifdef GL_ES
  precision highp float;
#endif

varying vec3 normal;
varying vec4 col;
varying vec3 to_eye;

void main(void) {
  // Intensity of diffuse light
  float i = dot(to_eye, normal);
  if (i < -1e-3)
    discard;
  vec4 cc = vec4(i * col.rgb, 1.);
//  i = max(min(i, 1.), 0.);

  // Diffuse light

  gl_FragColor = cc;
}

